{
  "name": "contracts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/contracts/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/contracts/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "coverage/libs/contracts"
      ],
      "options": {
        "jestConfig": "libs/contracts/jest.config.js",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/contracts",
        "tsConfig": "libs/contracts/tsconfig.lib.json",
        "packageJson": "libs/contracts/package.json",
        "main": "libs/contracts/src/index.ts",
        "assets": [
          "libs/contracts/*.md"
        ]
      }
    }
  },
  "tags": []
}
