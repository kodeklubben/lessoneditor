{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "ES6"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lessoneditor/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@lessoneditor/auth": ["libs/auth/src/index.ts"],
      "@lessoneditor/github": ["libs/github/src/index.ts"],
      "@lessoneditor/lesson": ["libs/lesson/src/index.ts"],
      "@lessoneditor/session": ["libs/session/src/index.ts"],
      "@lessoneditor/thumb": ["libs/thumb/src/index.ts"],
      "@lessoneditor/user": ["libs/user/src/index.ts"],
      "@libs/*": ["libs/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
